@model Entity.Categoryviewmodel
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        $("#status").prop('checked', true);
        $("#lblmsg").text('');
        $('#divProductid input').attr("readonly", true);
        if ($("#Productid").val() == "0" || $("#Productid").val() == "") {
            $("#divProductid").hide();
        }

        $("#result").on("click", ".btn_edit", function (evt) {
            var pid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillProductDetails")',
                dataType: 'JSON',
                data: { productid: pid },
                success: function (data) {
                    $("#divProductid").show();
                    $("#Productid").val(data.Productid);
                    $('#catid').val(data.Categoryid);
                    $('#subcatid').val(data.SubCategoryid);
                    $("#Product").val(data.Product);
                    $("#status").prop('checked', data.status);
                }
            });
        });

        function clear() {
            $("#divProductid").hide();
            $('#divProductid input').val('0');
            $('#subcatid').val('');
            $("#catid").val('');
            $("#Product ").val('');
        }

        $('#Product').blur(function () {
            var Product = $('#Product').val();
            var Catid = $('#catid').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_Product")',
                dataType: 'JSON',
                data: { Product: Product, Categoryid: Catid },
                success: function (data) {
                    if (data.Product != null) {
                        $("#lblmsg").text("Product Name Already Exists!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#Product').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            validations();
            var remark = "false";
            if ($("#status").is(":checked")) {
                remark = "true";
            }
            var subcatid = $("#subcatid").val();
            if (subcatid == "") {
                subcatid = 0;
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("DMLProduct")',
                data: { Productid: $('#divProductid input').val(), catid: $("#catid").val(), subcatid: subcatid, Product: $("#Product").val(), status: remark, evt: 'submit', id: 0 },
                success: function (result) {
                    $("#lblmsg").text("Product updated successfully!..");
                    $("#lblmsg").css({ "color": "lime" });
                    $("#lblmsg").css({ "font-size": "25px" });
                    $("#result").html(result);
                    clear();
                    ReloadPaging();
                }
            });
        });

        $("#reset").click(function () {
            clear();
        });

        $("#result").on("click", ".btn_delete", function (evt) {
            var catid = this.id;
            var flag = confirm('Are you sure you want to delete this Product?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLProduct")',
                    data: { Productid: 0, catid: 0, subcatid: 0, Product: '', status: remark, evt: 'submit', id: catid },
                    success: function (result) {
                        $("#lblmsg").text("Category deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        $("#catid").change(function () {
            $("#subcatid").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("BindSubCategory")',
                dataType: 'json',
                data: { categoryid: $("#catid").val() },
                success: function (data) {
                    if (data != "") {
                        var item = '<option value="">Select Sub Category</option>';
                        $.each(data, function (i, d) {
                            item += '<option value="' + d.Value + '">' + d.Text + '</option>';
                        });
                        $("#subcatid").append(item);
                    }
                    else {
                        var item = '<option value="">select Sub Category</option>';
                        $("#subcatid").append(item);
                    }
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        })

        function validations() {
            var cnt = 0;

            if ($("#catid").val() == "" || $("#catid").val() == "0") {
                cnt++;
                $("#catid").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#catid").css({
                    "border": "",
                    "background": ""
                });
            }

            var length = $('#subcatid > option').length;
            if (length > 1 && ($("#subcatid").val() == "" || $("#subcatid").val() == "0")) {
                cnt++;
                $("#subcatid").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#subcatid").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#Product").val() == '') {
                cnt++;
                $("#Product").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#Product").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0)
                e.preventDefault();
        }
        ReloadPaging();
    });
</script>
