@model Entity.routeviewmodel
@{
    ViewBag.Title = "Route Master";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        $('#status').attr('checked', true);
        $("#lblmsg").text('');
        $('#Routeid input').attr("readonly", true);
        if ($("#routeid").val() == "0") {
            $("#Routeid").hide();
        }

        $("#result").on("click", ".btn_edit", function (evt) {
            var routeid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillRouteDetails")',
                dataType: 'JSON',
                data: { routeid: routeid },
                success: function (data) {
                    $("#Routeid").show();
                    $('#Routeid input').val(data.routeid);
                    $("#routename").val(data.routename);
                    $("#status").prop('checked', data.status);
                    //$("#academicyear").val(data.academicyear);
                }
            });
        });

        function clear() {
            $("#Routeid").hide();
            $('#Routeid input').val('0');
            $("#routename").val('');
            //            $("#status").prop('checked', false);
            //$("#academicyear").val('');
        }

        $('#routename').blur(function () {
            var routename = $('#routename').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_route")',
                dataType: 'JSON',
                data: { routename: routename },
                success: function (data) {
                    if (data.routename != null) {
                        $("#lblmsg").text("Route Name Already Exists!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#routename').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            setTimeout(function () {
                validations();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLRoute")',
                    data: $('#frm').serialize() + "&evt=submit&id=0",
                    success: function (result) {
                        $("#lblmsg").text("Route updated successfully!..");
                        $("#lblmsg").css({ "color": "lime" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
        });

        $("#result").on("click", ".btn_delete", function (evt) {
            var routeid = this.id;
            var flag = confirm('Are you sure you want to delete this Route?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLRoute")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + routeid + "",
                    success: function (result) {
                        $("#lblmsg").text("Route deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        function validations() {
            var cnt = 0;

            if ($("#routename").val() == '') {
                cnt++;
                $("#routename").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#routename").css({
                    "border": "",
                    "background": ""
                });
            }

            //            if ($("#academicyear").val() == '') {
            //                cnt++;
            //                $("#academicyear").css({
            //                    "border": "2px solid red"
            //                });
            //            }
            //            else {
            //                $("#academicyear").css({
            //                    "border": "",
            //                    "background": ""
            //                });
            //            }

            if (cnt != 0)
                e.preventDefault();
        }

        ReloadPaging();
    });
</script>
