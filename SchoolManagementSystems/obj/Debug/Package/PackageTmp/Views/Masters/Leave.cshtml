@model Entity.leaveviewmodel
@{
    ViewBag.Title = "Leave";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();

        $("#status").prop('checked', true);
        $("#M_leave td").css({ "background-color": "orange" });
        $("#lblmsg").text('');
        $('#Leaveid input').attr("readonly", true);
        if ($("#leaveid").val() == "0") {
            $("#Leaveid").hide();
        }

        $("#result").on("click", ".edit", function (evt) {
            var leaveid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillLeaveDetails")',
                dataType: 'JSON',
                data: { leaveid: leaveid },
                success: function (data) {
                    $("#Leaveid").show();
                    $('#Leaveid input').val(data.leaveid);
                    $("#leavename").val(data.leavename);
                    $("#leaveBalance").val(data.leaveBalance);
                    $("#status").prop('checked', data.status);
                    //$("#academicyear").val(data.academicyear);
                }
            });
        });

        function clear() {
            $("#Leaveid").hide();
            $('#Leaveid input').val('0');
            $("#leavename").val('');
            $("#leaveBalance").val('0');
            //            $("#status").prop('checked', false);
            //$("#academicyear").val('');
        }

        $('#leavename').blur(function () {
            var leavename = $('#leavename').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_Leave")',
                dataType: 'JSON',
                data: { leavename: leavename },
                success: function (data) {
                    if (data.leavename != null) {
                        $("#lblmsg").text("Leave Name Already Exists!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#leavename').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            setTimeout(function () {
                validations();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLLeave")',
                    data: $('#frm').serialize() + "&evt=submit&id=0",
                    success: function (result) {
                        $("#lblmsg").text("Leave updated successfully!..");
                        $("#lblmsg").css({ "color": "lime" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
        });

        $("#result").on("click", ".delete", function (evt) {
            var leaveid = this.id;
            var flag = confirm('Are you sure you want to delete this Leave?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLLeave")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + leaveid + "",
                    success: function (result) {
                        $("#lblmsg").text("Leave deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        function validations() {
            var cnt = 0;

            if ($("#leavename").val() == '') {
                cnt++;
                $("#leavename").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#leavename").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#leaveBalance").val() == '') {
                cnt++;
                $("#leaveBalance").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#leaveBalance").css({
                    "border": "",
                    "background": ""
                });
            }
            //            if ($("#academicyear").val() == '') {
            //                cnt++;
            //                $("#academicyear").css({
            //                    "border": "2px solid red"
            //                });
            //            }
            //            else {
            //                $("#academicyear").css({
            //                    "border": "",
            //                    "background": ""
            //                });
            //            }

            if (cnt != 0)
                e.preventDefault();
        }

        ReloadPaging();
    });
</script>
@Html.HiddenFor(m => m.leaveid)@Html.Partial("_PermissionHiddenFlds")
