@model Entity.StudentCategoryviewmodel
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        $("#status").prop('checked', true);
        $("#M_Position td").css({ "background-color": "orange" });
        $("#lblmsg").text('');
        $('#positionid input').attr("readonly", true);
        if ($("#categoryid").val() == "0") {
            $("#positionid").hide();
        }

        $("#result").on("click", ".btn_edit", function (evt) {
            var posid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillCategoryDetails")',
                dataType: 'JSON',
                data: { catid: posid },
                success: function (data) {
                    $("#positionid").show();
                    $('#positionid input').val(data.StudCategoryid);
                    $("#categoryname").val(data.StudCategoryname);
                    $("#status").prop('checked', data.status);
                }
            });
        });

        function clear() {
            $("#positionid").hide();
            $('#positionid input').val('0');
            $("#categoryname").val('');
            //            $("#status").prop('checked', false);
            //$("#academicyear").val('');
        }

        $('#categoryname').blur(function () {
            var posname = $('#categoryname').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_category")',
                dataType: 'JSON',
                data: { Categoryname: posname },
                success: function (data) {
                    if (data.StudCategoryname != null) {
                        $("#lblmsg").text("Designation Name Already Exists!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#categoryname').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            setTimeout(function () {
                validations();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLCategory")',
                    data: $('#frm').serialize() + "&evt=submit&id=0",
                    success: function (result) {
                        $("#lblmsg").text("Designation updated successfully!..");
                        $("#lblmsg").css({ "color": "lime" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
        });

        $("#result").on("click", ".btn_delete", function (evt) {
            var posid = this.id;
            var flag = confirm('Are you sure you want to delete this Designation?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLCategory")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + posid + "",
                    success: function (result) {
                        $("#lblmsg").text("Designation deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        function validations() {
            var cnt = 0;

            if ($("#categoryname").val() == '') {
                cnt++;
                $("#categoryname").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#categoryname").css({
                    "border": "",
                    "background": ""
                });
            }

            //            if ($("#academicyear").val() == '') {
            //                cnt++;
            //                $("#academicyear").css({
            //                    "border": "2px solid red"
            //                });
            //            }
            //            else {
            //                $("#academicyear").css({
            //                    "border": "",
            //                    "background": ""
            //                });
            //            }

            if (cnt != 0)
                e.preventDefault();
        }

        ReloadPaging();
    });
</script>
