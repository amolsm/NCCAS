@model Entity.positionviewmodel
@{
    ViewBag.Title = "Designation";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        $('#status').attr('checked', true);
        $("#M_Position td").css({ "background-color": "orange" });
        $("#lblmsg").text('');
        $('#positionid input').attr("readonly", true);
        if ($("#posid").val() == "0") {
            $("#positionid").hide();
        }

        $("#result").on("click", ".btn_edit", function (evt) {
            var posid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillPositionDetails")',
                dataType: 'JSON',
                data: { posid: posid },
                success: function (data) {
                    $("#positionid").show();
                    $('#positionid input').val(data.posid);
                    $("#posname").val(data.posname);
                    $("#status").prop('checked', data.status);
                    //$("#academicyear").val(data.academicyear);
                }
            });
        });

        function clear() {
            $("#positionid").hide();
            $('#positionid input').val('0');
            $("#posname").val('');
            //            $("#status").prop('checked', false);
            //$("#academicyear").val('');
        }

        $('#posname').blur(function () {
            var posname = $('#posname').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_position")',
                dataType: 'JSON',
                data: { posname: posname },
                success: function (data) {
                    if (data.posname != null) {
                        $("#lblmsg").text("Designation Name Already Exists!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#posname').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            setTimeout(function () {
                validations();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLPosition")',
                    data: $('#frm').serialize() + "&evt=submit&id=0",
                    success: function (result) {
                        $("#lblmsg").text("Designation updated successfully!..");
                        $("#lblmsg").css({ "color": "lime" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
        });

        $("#result").on("click", ".btn_delete", function (evt) {
            var posid = this.id;
            var flag = confirm('Are you sure you want to delete this Designation?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLPosition")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + posid + "",
                    success: function (result) {
                        $("#lblmsg").text("Designation deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        function validations() {
            $("#lblmsg").text('');
            var cnt = 0;

            if ($("#posname").val() == '') {
                cnt++;
                $("#posname").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#posname").css({
                    "border": "",
                    "background": ""
                });
            }

            //            if ($("#academicyear").val() == '') {
            //                cnt++;
            //                $("#academicyear").css({
            //                    "border": "2px solid red"
            //                });
            //            }
            //            else {
            //                $("#academicyear").css({
            //                    "border": "",
            //                    "background": ""
            //                });
            //            }

            if (cnt != 0)
                e.preventDefault();
        }

        ReloadPaging();
    });
</script>
