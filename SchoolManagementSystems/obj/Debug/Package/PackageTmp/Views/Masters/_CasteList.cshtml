@model Entity.casteviewmodel
<div id="result" class="table-responsive">
    <table class="table tb-parshav tablesorter">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Casteid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Religionid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CasteName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.academicyear)
                </th>*@
                <th class="edt">
                    @Html.DisplayName("Action")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._Castelist)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Casteid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Religionnm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CasteName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.academicyear)
                    </td>*@
                    <td>
                        <input type="button" id="@item.Casteid" class="btn btn_edit btn-default edit" value="Edit" />
                        @*<input type="button" id="@item.Casteid" class="btn btn_delete btn-default delete" value="Delete" />*@
                    </td>
                </tr>
            }
            </tbody>
</table>
</div>