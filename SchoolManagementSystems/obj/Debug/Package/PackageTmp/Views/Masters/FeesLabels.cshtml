@model Entity.feeslabelviewmodel
@{
    ViewBag.Title = "Fees Labels";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        Filllblcnt();
        function Filllblcnt() {
            var item = '<option value="">Select Control count</option>';
            for (var i = 1; i <= 101; i++) {
                item += '<option value=' + i + '>' + i + '</option>';
            }
            $("#ctrlcnt").append(item);
        }
        $("#lblmsg").text('');
        $('#Feeslblid input').attr("readonly", true);
        if ($("#feeslblid").val() == "0") {
            $("#Feeslblid").hide();
        }

        $("#result").on("click", ".btn_edit", function (evt) {
            $("#lblmsg").text("");
            var feeslblid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillfeeslabelsDetails")',
                dataType: 'JSON',
                data: { feeslblid: feeslblid },
                success: function (data) {
                    $("#Feeslblid").show();
                    $('#Feeslblid input').val(data.feeslblid);
                    $("#ctrlcnt").val(data.ctrlcnt);
                    $("#classid").val(data.classid);
                    var ctrlcnt = $('#ctrlcnt').val();
                    var table = $('#dynamiclbl');
                    if (ctrlcnt > 0) {
                        table.html('');
                        for (var i = 0; i < ctrlcnt; i++) {
                            table.append('<div class="form-group col-md-9"><label class="col-md-6 form_out">Enter Fees Name </label><input class="text-box single-line" id=FeesNm' + i + ' name=FeesNm' + i + ' value="" type="text"></div>');
                        }
                        table.append(val);
                    }
                    else {
                        table.html('');
                    }
                }
            });
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillfeeslabelchildDetails")',
                dataType: 'JSON',
                data: { feeslblid: feeslblid },
                success: function (data) {
                    $.each(data, function (i, dt) {
                        $("#FeesNm" + i).val(dt);
                    });
                }
            });
        });

        function clear() {
            $("#Feeslblid").hide();
            $('#Feeslblid input').val('0');
            $("#ctrlcnt").val('');
            $("#classid").val('');
            var table = $('#dynamiclbl');
            table.html('');
        }

        $('#classid').change(function () {
            var classid = $('#classid').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_feeslabels")',
                dataType: 'JSON',
                data: { classid: classid },
                success: function (data) {
                    if (data.ctrlcnt != null) {
                        $("#lblmsg").text("Fees Labels Already Exists for this class!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#classid').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            setTimeout(function () {
                validations();
                var ctrlcnt = $('#ctrlcnt').val();
                if (ctrlcnt > 0) {
                    var FeesLabels;
                    for (var i = 0; i < ctrlcnt; i++) {
                        FeesLabels += $("#FeesNm" + i).val() + '|';
                    }
                }
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLFeesLabels")',
                    data: $('#frm').serialize() + "&evt=submit&id=0&FeesLabels=" + FeesLabels,
                    success: function (result) {
                        $("#lblmsg").text("Fees Labels updated successfully!..");
                        $("#lblmsg").css({ "color": "lime" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
        });

        //        $("#result").on("click", ".btn_delete", function (evt) {
        //            var feeslblid = this.id;
        //            var flag = confirm('Are you sure you want to delete this Designation?');
        //            if (flag) {
        //                $.ajax({
        //                    type: 'POST',
        //                    url: '@Url.Action("DMLPosition")',
        //                    data: $('#frm').serialize() + "&evt=Delete&id=" + feeslblid + "",
        //                    success: function (result) {
        //                        $("#lblmsg").text("Designation deleted successfully!..");
        //                        $("#lblmsg").css({ "color": "orange" });
        //                        $("#lblmsg").css({ "font-size": "25px" });
        //                        $("#result").html(result);
        //                        clear();
        //                    }
        //                });
        //            }
        //        });

        function validations() {
            var cnt = 0;
            if ($("#classid").val() == '') {
                cnt++;
                $("#classid").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#classid").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#ctrlcnt").val() == '') {
                cnt++;
                $("#ctrlcnt").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#ctrlcnt").css({
                    "border": "",
                    "background": ""
                });
            }
            var ctrlcnt = $('#ctrlcnt').val();
            if (ctrlcnt > 0) {
                for (var i = 0; i < ctrlcnt; i++) {
                    if ($("#FeesNm" + i).val() == '') {
                        cnt++;
                        $("#FeesNm" + i).css({
                            "border": "2px solid red"
                        });
                    }
                    else {
                        $("#FeesNm" + i).css({
                            "border": "",
                            "background": ""
                        });
                    }
                }
            }
            if (cnt != 0)
                e.preventDefault();
        }

        $('#ctrlcnt').change(function () {
            var ctrlcnt = $('#ctrlcnt').val();
            var table = $('#dynamiclbl');
            if (ctrlcnt > 0) {
                table.html('');
                for (var i = 0; i < ctrlcnt; i++) {
                    table.append('<div class="form-group col-md-9"><label class="col-md-6 form_out">Enter Fees Name </label><input class="text-box single-line" id=FeesNm' + i + ' name=FeesNm' + i + ' value="" type="text"></div>');
                }
                table.append(val);
            }
            else {
                table.html('');
            }
        });

        ReloadPaging();
    });
</script>
