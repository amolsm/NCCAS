@model Entity.stateviewmodel

@{
    ViewBag.Title = "State";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();

        $("#status").prop('checked', true);
        $("#M_sta td").css({ "background-color": "orange" });
        $("#lblmsg").text('');
        $('#stateid input').attr("readonly", true);
        if ($("#stateid input").val() == "0") {
            $("#stateid").hide();
        }

        $("#result").on("click", ".edit", function (evt) {
            var Stateid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillStateDetails")',
                dataType: 'JSON',
                data: { Stateid: Stateid },
                success: function (data) {
                    $("#Countryid").val(data.Countryid)
                    $("#stateid").show();
                    $("#stateid input").val(data.Stateid);
                    $("#StateName").val(data.StateName);
                    $("#status").prop('checked', data.status);
                }
            });
        });

        function clear() {
            $("#Countryid").val('');
            $("#stateid").hide();
            $('#stateid input').val('0');
            $("#StateName").val('');
            $("#status").prop('checked', false);
        }

        $('#StateName').blur(function () {
            var StateName = $('#StateName').val();
            var Countryid = $("#Countryid").val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_State")',
                dataType: 'JSON',
                data: { StateName: StateName, Countryid: Countryid },
                success: function (data) {
                    if (data.StateName != null) {
                        $("#lblmsg").text("State Name Already Exists!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#StateName').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            setTimeout(function () {
                validations();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLState")',
                    data: $('#frm').serialize() + "&evt=submit&id=0",
                    success: function (result) {
                        $("#lblmsg").text("State updated successfully!..");
                        $("#lblmsg").css({ "color": "lime" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
        });

        $("#result").on("click", ".delete", function (evt) {
            var Stateid = this.id;
            var flag = confirm('Are you sure you want to delete this State?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLState")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + Stateid + "",
                    success: function (result) {
                        $("#lblmsg").text("State deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        function validations() {
            var cnt = 0;

            if ($("#Countryid").val() == '') {
                cnt++;
                $("#Countryid").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#Countryid").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#StateName").val() == '') {
                cnt++;
                $("#StateName").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#StateName").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0)
                e.preventDefault();
        }
        ReloadPaging();
    });
</script>

