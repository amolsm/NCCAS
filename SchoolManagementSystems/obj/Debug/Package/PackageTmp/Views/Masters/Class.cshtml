@model Entity.classviewmodel

@{
    ViewBag.Title = "Class";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();

        $("#status").prop('checked', true);
        $("#M_class td").css({ "background-color": "orange" });
        $("#lblmsg").text('');
        $('#classid input').attr("readonly", true);
        if ($("#classid input").val() == "0") {
            $("#classid").hide();
        }

        $("#result").on("click", ".edit", function (evt) {
            var Classid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillClassDetails")',
                dataType: 'JSON',
                data: { Classid: Classid },
                success: function (data) {
                    $("#classid").show();
                    $("#classid input").val(data.Classid);
                    $("#Classnm").val(data.Classnm);
                    $("#status").prop('checked', data.status);
                    $("#academicyear").val(data.academicyear);
                }
            });
        });

        function clear() {
            $("#classid").hide();
            $('#classid input').val('0');
            $("#Classnm").val('');
            //            $("#status").prop('checked', false);
            $("#academicyear").val('');
        }

        $('#Classnm').blur(function () {
            var Classnm = $('#Classnm').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_Class")',
                dataType: 'JSON',
                data: { Classnm: Classnm },
                success: function (data) {
                    if (data.Classnm != null) {
                        $("#lblmsg").text("Class Name Already Exists!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#Classnm').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            setTimeout(function () {
                validations();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLClass")',
                    data: $('#frm').serialize() + "&evt=submit&id=0",
                    success: function (result) {
                        $("#lblmsg").text("Class updated successfully!..");
                        $("#lblmsg").css({ "color": "lime" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
        });

        $("#result").on("click", ".delete", function (evt) {
            var Classid = this.id;
            var flag = confirm('Are you sure you want to delete this Class?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLClass")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + Classid + "",
                    success: function (result) {
                        $("#lblmsg").text("Class deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        function validations() {
            var cnt = 0;

            if ($("#Classnm").val() == '') {
                cnt++;
                $("#Classnm").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#Classnm").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#academicyear").val() == '') {
                cnt++;
                $("#academicyear").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#academicyear").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0)
                e.preventDefault();
        }
        ReloadPaging();
    });
</script>

