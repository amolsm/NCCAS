                                    @Html.ValidationMessageFor(model => model.busDriverNm)
                                </div>
                                <div class="form-group col-md-9">
                                    @Html.LabelFor(model => model.busDrivercontact, new { @class = "col-md-6 form_out" })
                                    @Html.TextBoxFor(model => model.busDrivercontact, new { @class = "col-md-5 form-control form_in", placeholder = "Enter Driver contact" })
                                    @Html.ValidationMessageFor(model => model.busDrivercontact)
                                </div>
                                <div class="form-group col-md-9">
                                    @Html.LabelFor(model => model.busRTONo, new { @class = "col-md-6 form_out" })
                                    @Html.TextBoxFor(model => model.busRTONo, new { @class = "col-md-5 form-control form_in", placeholder = "Enter Bus RTO Number" })
                                    @Html.ValidationMessageFor(model => model.busRTONo)
                                </div>
                                <div class="form-group col-md-9">
                                    @Html.LabelFor(model => model.busDateTime, new { @class = "col-md-6 form_out" })
                                    @Html.TextBoxFor(model => model.busDateTime, new { id = "datepicker", @class = "col-md-5 form-control form_in", placeholder = "Select Bus Date & Time" })
                                    @Html.ValidationMessageFor(model => model.busDateTime)
                                </div>
                                <div class="form-group col-md-9">
                                    @Html.LabelFor(model => model.status, new { @class = "col-md-6 form_out" })
                                    @Html.CheckBoxFor(model => model.status, new { @class = "col-md-5 form-control form_in", @style = "height:15px; margin-top:20px;" })
                                    @Html.ValidationMessageFor(model => model.status)
                                </div>
                                <div style="display: none;" class="form-group col-md-9">
                                    @Html.LabelFor(model => model.academicyear, new { @class = "col-md-6 form_out" })
                                    @Html.TextBoxFor(model => model.academicyear, new { @class = "col-md-5 form-control form_in" })
                                    @Html.ValidationMessageFor(model => model.academicyear)
                                </div>
                                <div class="form-group col-md-9" style="text-align:center;">
                                    <input type="button" class="btn btn-primary" id="insert" value="Submit" />
                                    <input type="button" class="btn btn-primary" id="reset" value="Reset" />
                                    <br />
                                </div>

                            }
                            </div>
                        <!-- table end -->
                        @*</div>*@
                    </div>
                </td>
            </tr>
        </table>



    </div>
</div>
