@model Entity.paymentviewmodel
@{
    ViewBag.Title = "Fees Payment Paid/Unpaid History";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        ReloadPaging();
    });    
</script>
@Html.HiddenFor(m => m.Pid)
@Html.Partial("_PermissionHiddenFlds")
<div class="container">
    <div class="row">
        <table cellpadding="0" cellspacing="0" style="margin-top: 38px; margin-bottom:72px;">
            <tr>
                <td class="col-md-2 well blbg" style="margin-top: 50px; margin-bottom:90px;" valign="top">
                    @Html.Partial("_FeesSubMenu")
                </td>
                <td class="col-md-9" style="padding-top: 30px; margin-bottom:90px;">
                    <ul class="breadcrumb">
                        <li>@Html.ActionLink("Home", "Login", "Login")</li>
                        <li>@Html.ActionLink("Fees Management", "Index", "Fees", "")</li>
                        <li class="active">Fees Payment Paid/Unpaid History</li>
                        <div style="float: right;">
                            @using (Html.BeginForm())
                            {

                                @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
                                <input type="submit" value="Find" />
                            }
                        </div>
                    </ul>
                    <div class="col-md-10" style="width: 100%; text-align: left;">
                        <div class="" style="margin-left: -30px; color: #23527c;">
                            <div class="col-md-4 col-md-offset-8">
                                <form class="navbar-form navbar-left pull-right" role="search" style="margin-right: -30px;">
                                <div class="form-group">
                                    @*<input type="text" class="form-control ptext" placeholder="Search">*@
                                </div>
                                </form>
                            </div>
                            <!-- table start -->
                            <div id="result" class="table-responsive">
                                <table class="table tb-parshav tablesorter">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("ID")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Class")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Student")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Scholar-ship")
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ScholarshipFees)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TotalFees)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PaidFees)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PendingFees)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PTypeid)
                                            </th>
                                            @* <th>
                                                @Html.DisplayNameFor(model => model.Remarks)
                                            </th>*@
                                            <th>
                                                @Html.DisplayName("Stat")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model._Feespaymenthistory)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Pid)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Classid)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Studid)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.scholarship)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ScholarshipFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TotalFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PaidFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PendingFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PTypeid)
                                                </td>
                                                @* <td>
                                                    @Html.DisplayFor(modelItem => item.Remarks)
                                                </td>*@
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.status)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div id="pager" class="col-md-4 col-md-offset-8" style="position: none;">
                                <img src="../../Content/images/first.png" style="width: 19px;" class="first" />
                                <img src="../../Content/images/prev.png" style="width: 19px;" class="prev" />
                                <input type="text" style="width: 50px;" disabled="disabled" class="pagedisplay" />
                                <img src="../../Content/images/next.png" style="width: 19px;" class="next" />
                                <img src="../../Content/images/last.png" style="width: 19px;" class="last" />
                                <select style="border-color: Blue;" class="pagesize">
                                    <option selected="selected" value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <!-- table end -->
    </div>
</div>
