@model Entity.Userviewmodel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<style type="text/css">
    #Text1
    {
        width: 197px;
    }
    #Text2
    {
        width: 200px;
    }
    #Text2
    {
        width: 197px;
    }
    td
    {
        font-family: Arial;
        color: White;
    }
    .required
    {
        color: #004A80;
        width: 200px;
    }
    .Button
    {
        background-color: #004A80;
        color: White;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Button1').click(function () {
            var OldPassword = $('#OldPassword').val();
            var NewPassword = $('#NewPassword').val();
            var ConfirmNewPassword = $('#ConfirmNewPassword').val();
            var Userid = $('#hdUserid').val();

            if (OldPassword == "") {
                $("#error").text("Please type Your Old Password!..");
                return false;
            }
            if (NewPassword == "") {
                $("#error").text("Please type Your New Password!..");
                return false;
            }
            if (ConfirmNewPassword == "") {
                $("#error").text("Please type Your New Confirm Password!..");
                return false;
            }
            if (NewPassword != ConfirmNewPassword) {
                $("#error").text("New and Confirm Password doesn't match!..");
                return false;
            }

            $.ajax({
                type: 'GET',
                url: '@Url.Action("UpdatePassword")',
                dataType: 'JSON',
                data: { Userid: Userid, OldPassword: OldPassword, NewPassword: NewPassword },
                success: function () {                    
                }
            });
            //$("#error").text("");
            return false;
        });
        $('#Button2').click(function () {
            $('#OldPassword').val("");
            $('#NewPassword').val("");
            $('#ConfirmNewPassword').val("");
            $('#dis').text("");
        });

    });    
</script>
@Html.Partial("_MenuItems")
<table width="100%">
    <tr>
        <td align="left" style="color: #004A80; font-weight: bold;">
            Change Password
        </td>
    </tr>
</table>
<div>
    <table style="background-color: #004A80;" width="100%">
        <tr>
            <td align="center">
                @*<label style="color: Orange;" id="dis">
                </label>*@ <span id="error" style="color: Orange;"></span>
                <br />
                <table>
                    <tr>
                        @*<td>
