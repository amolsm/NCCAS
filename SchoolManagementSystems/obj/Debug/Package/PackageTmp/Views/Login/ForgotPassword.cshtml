@model Entity.Userviewmodel

@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>School Management System</title>
    <style type="text/css">
        #Text1
        {
            width: 197px;
        }
        #Text2
        {
            width: 200px;
        }
        #Text2
        {
            width: 197px;
        }
        td
        {
            font-family: Arial;
            color: White;
        }
        .required
        {
            color: #004A80;
        }
        .Button
        {
            background-color: #004A80;
            color: White;
        }
    </style>
    <script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-ui-1.8.20.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Button1').click(function () {
                var username = $('#UserName').val();
                var Emailid = $('#Emailid').val();

                if (username == "" || Emailid == "") {
                    $('#dis').slideDown().html("<span>Please type Username OR Email ID!..</span>");
                    return false;
                }                
            });
            $('#Button2').click(function () {
                $('#UserName').val("");
                $('#Emailid').val("");
                $('#Error').text("");
            });

            $('#Button3').click(function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetPassword")',
                    dataType: 'html',
                    data: { id: $("#Countryid").val() },
                    success: function () {

                    }
                });
            });
        });
    </script>
</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "loginForm" }))
    {
        <table style="width: 100%; height: 100%;">
            <tr>
                <td>
                    <table style="width: 100%;height:50px" bgcolor="#004A80">
                        <tr>
                            <td>
                                Home
                            </td>
                            <td>
                                About
                            </td>
                            <td>
                                Admission
                            </td>
                            <td>
                                Careers
                            </td>
                            <td>
                                Curriculam
                            </td>
                            <td>
                                Facilities
                            </td>
                            <td>
                                Contact
                            </td>
                            <td>
                                Registration
                            </td>
                            <td>
                                Login
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <img alt="" src="../../images/Home.png" style="width: 100%; height: 350px" />
                </td>
            </tr>            
            <tr>
                <td align="left" style="color: #004A80; font-weight: bold;">
                    Login
                </td>
            </tr>            
            <tr style="background-color: #004A80;">
                <td align="center">
                    <label style="color: Orange;" id="dis">
                    </label>
                    <span id="Error" style="color: Orange;">@ViewData["Error"]</span>
                    <br />
                    <table>
                        <tr>
                            @*<td>
                                @Html.LabelFor(m => m.UserName)
                            </td>*@
                            <td>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "required", minLength = "4", placeholder = "Enter User Name" })
                            </td>
                        </tr>
                        <tr><td>
                        @Html.DisplayName("OR")
                        </td></tr>
                        <tr>
                            @* <td>
                                @Html.LabelFor(m => m.Password)
                            </td>*@
                            <td>
                                @Html.PasswordFor(m => m.Emailid, new { @class = "required", minLength = "4", placeholder = "Enter Email ID" })
                            </td>
                        </tr>
                        <tr>
                            @* <td>
                            </td>*@
                            <td>
                                <input id="Button1" type="submit" class="Button" value="Retrieve Password" />
                                <input id="Button2" type="button" class="Button" value="Reset" />
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr><td>&nbsp;</td></tr>
            <tr >
                <td>
                    <table style="width: 100%;background-color:#004A80;">
                        <tr>
                            <td align"left" style="height:50px;">
