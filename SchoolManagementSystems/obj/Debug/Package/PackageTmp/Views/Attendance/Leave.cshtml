@model Entity.Attendanceviewmodel
@{
    ViewBag.Title = "Leave";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}

<script src="../../Scripts/jquery-1.10.2.js" type="text/javascript"></script>
<script src="../../Scripts/jquery-ui.js" type="text/javascript"></script>
<style type="text/css">
    .ui-datepicker-calendar {
        background-color: antiquewhite;
    }

    .ui-datepicker-title {
        background-color: antiquewhite;
    }

    .ui-icon ui-icon-circle-triangle-w {
        background-color: antiquewhite;
    }

    #ui-datepicker-div {
        display: none;
    }
</style>
<script type="text/javascript">

    $(document).ready(function () {
        FillPermission();
        var Leavedays = 0;
        $("#insert").click(function (e) {
            Validations(e);
            var LeaveType = $("#LeaveTypeid").val();
            var EMPid = $("#Empid").val();

            CalculateDiff();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_Leave")',
                dataType: 'JSON',
                data: { Empid: EMPid, LeaveTypeid: LeaveType, Days: Leavedays },
                success: function (data) {
                    if (data.Leaves != null && data.Leaves < 0) {
                        $("#LeaveTypeid").val('');
                        $("#Empid").val('');
                        alert("Employee has no balance for this leave type");
                        return false;
                    }
                }
            });
        });

        $('#datepicker1').attr("readonly", true);

        $('#datepicker').attr("readonly", true);

        $('#datepicker').datepicker({
            inline: true,
            showOtherMonths: true,
            showOtherYears: true,
            dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            yearRange: "-100:+0",
            changeYear: true
        });

        $('#datepicker1').datepicker({
            inline: true,
            showOtherMonths: true,
            showOtherYears: true,
            dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            yearRange: "-100:+0",
            changeYear: true
        });

        $('#datepicker').datepicker('setDate', new Date());
        $('#datepicker1').datepicker('setDate', new Date());

        $('#StaffAbsent').change(function () {
            if ($(this).is(":checked")) {
                $('#staffreason').css('display', 'block');
            }
            else {
                $('#staffreason').css('display', 'none');
            }
        });


        $("#Empid").change(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetAvailableLeaves")',
                data:  $('#frm').serialize() ,
                success: function (result) {
                    $("#result").html(result);
                }
            });
        })

        $("#LeaveTypeid").change(function () {
            if ($("#Empid").val() == null || $("#Empid").val() == "")
            {
                $("#LeaveTypeid").val('');
                alert("Please select Employee First");
                return;
            }
            var LeaveType = $("#LeaveTypeid").val();
            var EMPid = $("#Empid").val();
            if (LeaveType == "" || LeaveType == "undefined")
            {
                return false;
            }
            CalculateDiff();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_Leave")',
                dataType: 'JSON',
                data: { Empid: EMPid, LeaveTypeid: LeaveType, Days: Leavedays },
                success: function (data) {
                    if (data.Leaves != null && data.Leaves < 0) {
                        $("#LeaveTypeid").val('');
                        alert("Employee has no balance for this leave type");
                        return false;
                    }
                }
            });
        });

        function CalculateDiff() {

            if ($("#LeaveStartDate").val() != "" && $("#LeaveEndDate").val() != "") {

                var From_date = new Date($("#datepicker").val());
                var To_date = new Date($("#datepicker1").val());
                var diff_date = To_date - From_date;

                Leavedays = (Math.floor(((diff_date % 31536000000) % 2628000000) / 86400000))+1;
            }
            else {
                alert("Please select dates");
                return false;
            }
        }

        function Validations(e) {
            var cnt = 0;
            if ($("#Empid").val() == '') {
                cnt++;
                $("#Empid").css({
                    "border": "1px solid red"
                });
            }
            else {
                $("#Empid").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#LeaveTypeid").val() == '') {
                cnt++;
                $("#LeaveTypeid").css({
                    "border": "1px solid red"
                });
            }
            else {
                $("#LeaveTypeid").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#LeaveStartDate").val() == '') {
                cnt++;
                $("#LeaveStartDate").css({
                    "border": "1px solid red"
                });
            }
            else {
                $("#LeaveStartDate").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#LeaveEndDate").val() == '') {
                cnt++;
                $("#LeaveEndDate").css({
                    "border": "1px solid red"
                });
            }
            else {
                $("#LeaveEndDate").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0) {
                e.preventDefault();
            }
        }


    });
</script>
@Html.Partial("_PermissionHiddenFlds")
<div class="container">
    <div class="row">

        <table cellpadding="0" cellspacing="0" style="margin-top:38px;">
            <tr>
                <td class="col-md-2 well blbg" style="margin-top:50px;" valign="top">
                    @* <div class="well blbg">
                        <a href="~/Login/Login">Back to Home</a>*@
                    @Html.Partial("_AttendanceMenuList")
                    @*</div>*@
                </td>
                <td class="col-md-9" style=" padding-top: 30px;">
                    <ul class="breadcrumb">
                        <li>@Html.ActionLink("Home", "Login", "Login")</li>
                        <li>@Html.ActionLink("Attendance Management", "Index", "Attendance", "")</li>
                        <li class="active">Apply for Leave</li>
                    </ul>

                    <div class="col-md-10" style="width:100%;">
                        <center>
                            <!-- table start -->
                            <table width=" 100%">
                                <tr>
                                    <td>
                                        <div>
                                        <div id="AddForm" style="display: none;">
                                            @using (Html.BeginForm("EmployeeLeave", "Attendance", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm", @class = "form-inline" }))
                                            {
                                                @Html.ValidationSummary(true)
                                                <div class="form-group col-md-9">
                                                    @TempData["ErrorMessage"]
                                                </div>
                                                <div class="form-group col-md-9">
                                                    @Html.LabelFor(model => model.Empid, new { @class = "col-md-6 form_out" })
                                                    @Html.DropDownListFor(model => model.Empid, new SelectList(Model.Employeelist, "Empid", "FirstName", "Select Employee"), "Select Employee", new { @class = "col-md-5 form-control form_in" })
                                                    @Html.ValidationMessageFor(model => model.Empid)
                                                </div>
                                                <div class="form-group col-md-9">
                                                    @Html.LabelFor(model => model.LeaveStartDate, new { @class = "col-md-6 form_out" })
                                                    @Html.TextBoxFor(model => model.LeaveStartDate, new { id = "datepicker", placeholder = "Select Date of Leave Start Date", @class = "col-md-5 form-control form_in" })
                                                    @Html.ValidationMessageFor(model => model.LeaveStartDate)
                                                </div>
                                                <div class="form-group col-md-9">
                                                    @Html.LabelFor(model => model.LeaveEndDate, new { @class = "col-md-6 form_out" })
                                                    @Html.TextBoxFor(model => model.LeaveEndDate, new { id = "datepicker1", placeholder = "Select Date of Leave End Date", @class = "col-md-5 form-control form_in" })
                                                    @Html.ValidationMessageFor(model => model.LeaveEndDate)
                                                </div>
                                                <div class="form-group col-md-9">
                                                    <span class="col-md-6 form_out">
                                                        <b>Leave</b>
                                                    </span>
                                                    @Html.DropDownListFor(model => model.LeaveTypeid, new SelectList(Model.Leavelist, "leaveid", "leavename", "Select leave"), "Select leave", new { @class = "col-md-5 form-control form_in" })
                                                    @Html.ValidationMessageFor(model => model.LeaveTypeid)
                                                </div>
                                                <div class="form-group col-md-9">
                                                    @Html.LabelFor(model => model.Description, new { @class = "col-md-6 form_out" })
                                                    @Html.TextAreaFor(model => model.Description, new { id = "Description", @class = "col-md-5 form-control form_in" })
                                                    @Html.ValidationMessageFor(model => model.Description)
                                                </div>
                                                <div class="form-group col-md-9" id="staffreason" style="display:none;">
                                                </div>
                                                <div class="form-group col-md-9" style="text-align:center;">
                                                    <input type="submit" action="insert" class="btn btn-primary" id="insert" value="Submit" />
                                                </div>
                                            }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr><td><br /></td></tr>
                                <tr>
                                    <td valign="top">
                                        <div>
                                            <div class="" style="color:#23527c;">
                                                @Html.Partial("_LeaveList")
                                            </div>
                                        </div>

                                    </td>
                                </tr>
                            </table>
                    </div>
                </td>
            </tr>
        </table>
        <!-- table end -->
    </div>
</div>






