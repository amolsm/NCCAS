                    }
                    else {
                    }
                }
            });
        });
        $(".delete").click(function () {
            var Tid = this.id;
            var act = 'Delete';
            var flag = confirm('Are you sure you want to delete this Leave?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DeleteLeave")',
