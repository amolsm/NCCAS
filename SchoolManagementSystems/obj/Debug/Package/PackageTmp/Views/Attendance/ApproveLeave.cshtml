@Html.Partial("_PermissionHiddenFlds")
<div class="container">
    <div class="row">
        <table cellpadding="0" cellspacing="0" style="margin-top: 38px; margin-bottom:72px;">
            <tr>
                <td class="col-md-2 well blbg" style="margin-top: 50px; margin-bottom:90px;" valign="top">
                    @Html.Partial("_AttendanceMenuList")
                </td>
                <td class="col-md-9" style="padding-top: 30px; margin-bottom:90px;">
                    <ul class="breadcrumb">
                        <li>@Html.ActionLink("Home", "Login", "Login")</li>
                        <li>@Html.ActionLink("Attendance Management", "Index", "Attendance", "")</li>
                        <li class="active">Approve Leave</li>
                    </ul>
                    <div class="col-md-10" style="width: 100%;">
                        <div class="" style=" color: #23527c;">
                            <div class="col-md-4 col-md-offset-8">
                                <form class="navbar-form navbar-left pull-right" role="search" style="margin-right: -30px;">
                                <div class="form-group">
                                    @*<input type="text" class="form-control ptext" placeholder="Search">*@
                                </div>
                                </form>
                            </div>
                            <!-- table start -->
                            <div class="table-responsive">
                                <table id="result" class="table tb-parshav tablesorter">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("ID")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Employee")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Leave Start Date")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Leave End Date")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Leave Type")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Description")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Is Approve")
                                            </th>
                                            <th>
                    Action
                </th>                   
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.EmployeeLeavelist)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Leaveid)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Employee)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LeaveStartDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LeaveEndDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.leavename)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    <input type="checkbox" id="@item.Leaveid" class="Approve" />
                                                </td>
                                                <td>
                                                    <input type="button" id="@item.Leaveid" class="btn btn-default delete" value="Reject" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div id="pager" class="col-md-4 col-md-offset-8" style="position: none;">
                                    <img src="../../Content/images/first.png" style="width:19px;" class="first" />
                                    <img src="../../Content/images/prev.png"  style="width:19px;" class="prev" />
                                    <input type="text" style="width:50px;" disabled="disabled" class="pagedisplay" />
                                    <img src="../../Content/images/next.png"  style="width:19px;" class="next" />
                                    <img src="../../Content/images/last.png"  style="width:19px;" class="last" />
                                    <select style="border-color:Blue;" class="pagesize">
                                        <option selected="selected" value="10">10</option>
                                        <option value="15">15</option>
                                        <option value="20">20</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>
                            <!-- table end -->
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
