@model Entity.Studentviewmodel
@{
    ViewBag.Title = "Student Management - Manage Student";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        $(".btn_edit").click(function () {
            var Studid = this.id;
            location.href = '/Student/Admission?Studid=' + Studid;
        });
        $(".btn_delete").click(function () {
            var Studid = this.id;
            var act = 'delete';
            var flag = confirm('Are you sure you want to delete this Student?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Admission_DML")',
                    dataType: 'json',
                    data: { action: act, id: Studid },
                    success: function () {
                    }
                });
            }
        });
        ReloadPaging();
    });    
</script>
@Html.Partial("_PermissionHiddenFlds")
<div class="container">
    <div class="row">
        <table cellpadding="0" cellspacing="0" style="margin-top: 38px; margin-bottom:72px;">
            <tr>
                <td class="col-md-2 well blbg" style="margin-top: 50px; margin-bottom:90px;" valign="top">
                    @Html.Partial("_StudentSubMenu")
                </td>
                <td class="col-md-9" style="padding-top: 30px; margin-bottom:90px;">
                    <ul class="breadcrumb">
                        <li>@Html.ActionLink("Home", "Login", "Login")</li>
                        <li>@Html.ActionLink("Student Management", "Index", "Student", "")</li>
                        <li class="active">Manage Student</li>
                        <div style="float: right;">
                            @using (Html.BeginForm())
                            {

                                @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
                                <input type="submit" value="Find" />
                            }
                        </div>
                    </ul>
                    <div class="col-md-10" style="width: 100%;">
                        <div class="" style=" color: #23527c">
                            <div class="col-md-4 col-md-offset-8">
                                <form class="navbar-form navbar-left pull-right" role="search" style="margin-right: -30px;">
                                <div class="form-group">
                                    @*<input type="text" class="form-control ptext" placeholder="Search">*@
                                </div>
                                </form>
                            </div>
                            <!-- table start -->
                            <div id="result" class="table-responsive">
                                <table class="table tb-parshav tablesorter">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("ID")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Student Name")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Email ID")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Contact No")
                                            </th>
                                            <th class="edt">
                                                @Html.DisplayName("Action")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.StudentDataCollection)
                                        {
                                            <tr>
                                                <td>
                                                    @System.DateTime.Now.Year@Html.Label("0000")@Html.DisplayFor(modelItem => item.Studid)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Studnm)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.StudEmail)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FatherContact)
                                                </td>
                                                <td>
                                                    <input type="button" id="@item.Studid" class="btn btn-default btn_edit" value="Edit" />
                                                    @*<input type="button" id="@item.Studid" class="btn btn-default btn_delete" value="Delete" />*@
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div id="pager" class="col-md-4 col-md-offset-8" style="position: none;">
                                <img src="../../Content/images/first.png" style="width: 19px;" class="first" />
                                <img src="../../Content/images/prev.png" style="width: 19px;" class="prev" />
                                <input type="text" style="width: 50px;" disabled="disabled" class="pagedisplay" />
                                <img src="../../Content/images/next.png" style="width: 19px;" class="next" />
                                <img src="../../Content/images/last.png" style="width: 19px;" class="last" />
                                <select style="border-color: Blue;" class="pagesize">
                                    <option selected="selected" value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                            </div>
                            <!-- table end -->
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <div>
        </div>
    </div>
</div>
