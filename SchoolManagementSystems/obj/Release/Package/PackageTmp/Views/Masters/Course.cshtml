@model Entity.courseassigndeptmodel
@{
    ViewBag.Title = "Course";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();

        $("#status").prop('checked', true);
        $("#M_class td").css({ "background-color": "orange" });
        $("#lblmsg").text('');
        $('#cid input').attr("readonly", true);
        if ($("#cid input").val() == "0") {
            $("#cid").hide();
        }

        $("#result").on("click", ".edit", function (evt) {
            var Cid = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("FillAssignCourseDetails")',
                dataType: 'JSON',
                data: { Cid: Cid },
                success: function (data) {
                    clearmsg();
                    debugger;
                    $("#cid").show();
                    $("#cid input").val(data.Cid);
                    $("#CourseId").val(data.Course_id);
                    $("#Dept_Id").val(data.Dept_id);
                    $("#status").prop('checked', data.status);
                   
                }
            });
        });

        function clear() {
            $("#cid").hide();
            $('#cid input').val('0');
            $("#CourseId").val('');
            $("#Dept_Id").val('');

            //            $("#status").prop('checked', false);
         
        }

      

      

        $("#insert").click(function () {
            setTimeout(function () {
                validations();
              
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLAssignCourseDept")',
                    data: $('#frm').serialize() + "&evt=submit&id=0",
                    success: function (result) {
                        $("#msgs").show();
                        $("#lblmsgs").text("Course Assign to department updated successfully!..");
                        $("#lblmsgs").css({ "color": "green" });
                        $("#lblmsgs").css({ "font-size": "15px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
            clearmsg();
        });

        function clearmsg() {
            $("#msg").hide();
            $("#msgs").hide();
        }
        $("#Dept_Id").change(function () {
            CheckDuplicate();
        })
        function ReloadDept()
        {
            $("#Dept_Id").empty();
            var item = '<option value="">select Department</option>';
            $("#Dept_Id").append(item);
        }
        function CheckDuplicate()
        {
            if ($("#Dept_Id").val() == "") {
                ReloadDept();
            } else {
                $("#lblmsg").text("");
                var CourseId = $("#CourseId").val();
                var Dept_Id = $("#Dept_Id").val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("check_duplicate_assigncourse")',
                    dataType: 'JSON',
                    data: { CourseId: CourseId, Dept_Id: Dept_Id },
                    success: function (data) {
                        if (data != null) {
                            $("#msg").show();
                            $("#lblmsg").text("Course Assign to this department Already Exists!..");
                            $("#lblmsg").css({ "color": "orange" });
                            $("#lblmsg").css({ "font-size": "15px" });
                            $('#Dept_Id').val(0);
                            return false;
                        }
                    }
                });
            }
        }

        $("#result").on("click", ".delete", function (evt) {
            var cid = this.id;
            var flag = confirm('Are you sure you want to delete this Class?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLAssignCourseDept")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + cid + "",
                    success: function (result) {
                        $("#msg").show();
                        $("#lblmsg").text("Course Assigned deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "15px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        function validations() {
            var cnt = 0;

            if ($("#CourseId").val() == '') {
                cnt++;
                $("#CourseId").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#CourseId").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#Dept_Id").val() == '') {
                cnt++;
                $("#Dept_Id").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#Dept_Id").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0)
                e.preventDefault();
        }
        ReloadPaging();
    });
</script>

