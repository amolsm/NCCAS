@model Entity.InventoryVendorviewmodal

@{
    ViewBag.Title = "InventoryVendor";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();

        $("#status").prop('checked', true);
        $("#M_class td").css({ "background-color": "orange" });
        $("#lblmsg").text('');
        $('#vid input').attr("readonly", true);
        if ($("#vid input").val() == "0") {
            $("#vid").hide();
        }

        $("#result").on("click", ".edit", function (evt) {
            var id = this.id;
            $.ajax({
                type: 'GET',
                url: '@Url.Action("InventoryVendorbyId")',
                dataType: 'JSON',
                data: { id: id },
                success: function (data) {
                    clearmsg();
                    debugger;
                    $("#vid").show();
                    $("#vid input").val(data.Ven_Id);
                    $("#VendorName").val(data.VendorName);
                    $("#V_Address").val(data.V_Address);
                    $("#V_MobileNo").val(data.V_MobileNo);
                    $("#V_PhoneNo").val(data.V_PhoneNo);
                    $("#status").prop('checked', data.IsActive);

                }
            });
        });

        function clear() {
            $("#vid").hide();
            $('#vid input').val('0');
            $("#VendorName").val('');
            $("#V_Address").val('');
            $("#V_MobileNo").val('');
            $("#V_PhoneNo").val('');


            //            $("#status").prop('checked', false);

        }

        $("#V_MobileNo").keypress(function (e) {
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                $("#errmsg").html("Digits Only").show().fadeOut("slow");
                return false;
            }
        });
        $("#V_PhoneNo").keypress(function (e) {
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                $("#errmsg").html("Digits Only").show().fadeOut("slow");
                return false;
            }
        });



        $("#insert").click(function () {
            setTimeout(function () {
                validations();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLInventoryVendor")',
                    data: $('#frm').serialize() + "&evt=submit&id=0",
                    success: function (result) {
                        $("#msgs").show();
                        $("#lblmsgs").text("Vendor updated successfully!..");
                        $("#lblmsgs").css({ "color": "green" });
                        $("#lblmsgs").css({ "font-size": "15px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }, 1000);
        });

        $("#reset").click(function () {
            clear();
            clearmsg();
        });

        function clearmsg() {
            $("#msg").hide();
            $("#msgs").hide();
        }

        function CheckDuplicate()
        {

            var VendorName = $("#VendorName").val();

                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("check_duplicate_InventoryVendor")',
                    dataType: 'JSON',
                    data: { VendorName: VendorName },
                    success: function (data) {
                        if (data != null) {
                            $("#msg").show();
                            $("#lblmsg").text("Vendor Name Already Exists!..");
                            $("#lblmsg").css({ "color": "orange" });
                            $("#lblmsg").css({ "font-size": "15px" });
                            $('#Dept_Id').val(0);
                            return false;
                        }
                    }
                });
            }


        $("#result").on("click", ".delete", function (evt) {
            var vid = this.id;
            var flag = confirm('Are you sure you want to delete this Class?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLInventoryVendor")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + vid + "",
                    success: function (result) {
                        $("#msg").show();
                        $("#lblmsg").text("Vendor deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "15px" });
                        $("#result").html(result);
                        clear();
                        ReloadPaging();
                    }
                });
            }
        });

        function validations() {
            var cnt = 0;

            if ($("#V_Id").val() == '') {
                cnt++;
                $("#V_Id").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#V_Id").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#VendorName").val() == '') {
                cnt++;
                $("#VendorName").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#VendorName").css({
                    "border": "",
                    "background": ""
                });
            }
            if ($("#V_Address").val() == '') {
                cnt++;
                $("#V_Address").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#V_Address").css({
                    "border": "",
                    "background": ""
                });
            }
            if ($("#V_MobileNo").val() == '') {
                cnt++;
                $("#V_MobileNo").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#V_MobileNo").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0)
                e.preventDefault();
        }
        ReloadPaging();
    });
</script>

