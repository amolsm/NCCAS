@model Entity.lib_authormodel
<div id="result" class="table-responsive">
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.authorid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th class="edt">
                    @Html.DisplayName("Action")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._Authorlist)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Authorid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Authorname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <input type="button" id="@item.Authorid" class="btn btn-default btn_edit edit" value="Edit" />
                        @*<input type="button" id="@item.Countryid" class="btn btn-default btn_delete delete" value="Delete" />*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>