@model Entity.departmentviewmodel

<div id="result" class="table-responsive">
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Dept_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dept_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
              
                <th class="edt">
                    @Html.DisplayName("Action")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._Departmentlist)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dept_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dept_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                   
                    <td>
                        <input type="button" id="@item.Dept_id" class="btn btn-default btn_edit edit" value="Edit" />
                        @*<input type="button" id="@item.Classid" class="btn btn-default btn_delete delete" value="Delete" />*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

