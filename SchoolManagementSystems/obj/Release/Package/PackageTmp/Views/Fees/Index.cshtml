@model Entity.paymentviewmodel
@{
    ViewBag.Title = "Fees Payment Paid/Unpaid History";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        ReloadPaging();
    });    
</script>
@Html.HiddenFor(m => m.Pid)
@Html.Partial("_PermissionHiddenFlds")
<div class="container-fluid-full">
             
		<div class="row-fluid">
                       @Html.Partial("_FeesSubMenu")
	<div id="content" class="span10">
        	<div class="row-fluid">
              
                    <ul class="breadcrumb">
                           <li><i class="icon-home"></i>@Html.ActionLink("Home", "Login", "Login")<i class="icon-angle-right"></i>
                     @Html.ActionLink("Fees Management", "Index", "Fees", "")<i class="icon-angle-right"></i></li>
                        <li class="active">Fees Payment Paid/Unpaid History</li>
                        <div style="float: right;">
                            @using (Html.BeginForm())
                            {

                                @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
                                <input type="submit" value="Find" />
                            }
                        </div>
                    </ul>
                    <div class="row-fluid sortable">
              <div class="box span12">
                  	<div class="box-header" data-original-title>
						<h2><i class="fa fa-edit"></i><span class="break"></span>Form Elements</h2>
						<div class="box-icon">
						
							<a href="#" class="btn-minimize"><i class="fa fa-chevron-up" aria-hidden="true"></i></a>
						
						</div>
					</div> 
                  <div class="box-content">
                            <!-- table start -->
                            <div id="result" class="table-responsive">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("ID")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Class")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Student")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Scholar-ship")
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ScholarshipFees)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TotalFees)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PaidFees)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PendingFees)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PTypeid)
                                            </th>
                                            @* <th>
                                                @Html.DisplayNameFor(model => model.Remarks)
                                            </th>*@
                                            <th>
                                                @Html.DisplayName("Stat")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model._Feespaymenthistory)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Pid)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Classid)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Studid)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.scholarship)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ScholarshipFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TotalFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PaidFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PendingFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PTypeid)
                                                </td>
                                                @* <td>
                                                    @Html.DisplayFor(modelItem => item.Remarks)
                                                </td>*@
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.status)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                      </div>
                  </div>
                                             
                                                

                                         </div>
        </div>
             
    </div>
</div>
   
            </div>
