@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/shared/_SharedLayout_1.cshtml";
}
<script src="http://code.jquery.com/jquery-latest.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        (function () {
            $("#pic1").append('<img src="/MyProfile/getProfileimg/' + @Session["Genid"] + '" style="width: 160px;height: 160px" alt="Student Pic">');
        })();

    });
    </script>

    <section class="content container-fluid">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                View Profile
                <small>Profile details</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="~/MyProfile/Index"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">Profile</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">

            <div class="row" ng-app="myApp">
                <div class="box box-success">



                    <div class="panel-body" ng-controller="myCtrl" ng-init="GetAllData()">
                        <div class="box-header">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <h3 class="box-title">Profile Details</h3>

                        </div>
                        <div ng-repeat="Std in profiledetails">
                            <div class="col-md-3 col-sm-3">
                                <p id="pic1">

                                 
                                </p>
                            </div>

                            <div class="col-md-9 col-sm-9" >
                                <p>Welcome ! Hi, {{Std.Studnm}}</p>
                                <p><b>Roll no. : {{Std.RollNo}}</b></p>
                                <p><b>Name</b> : {{Std.Studnm}}</p>
                                <p><b>Mobile No :{{Std.StdMobNo}}</b></p>
                                <p><b>Email Address : {{Std.StudEmail}}</b></p>
                                <p><font size="1px"><i>You are expected to update &lt;MyProfile&gt; as and when your address or Mobile No. changes please contact with admin.</i></font></p>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
            <!-- /.row (main row) -->
        </section>
        <!-- /.content -->
    </section>

