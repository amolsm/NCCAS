@model Entity.Studentviewmodel
@{
    ViewBag.Title = "Student Management - Guardian List";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        $(".btn_edit").click(function () {
            var Studid = this.id;
            location.href = '/Student/Admission?Studid=' + Studid;
        });
        ReloadPaging();
    });    
</script>
@Html.Partial("_PermissionHiddenFlds")
<div class="container-fluid-full">
             
		<div class="row-fluid">
              @Html.Partial("_StudentSubMenu")
	<div id="content" class="span10">
        	<div class="row-fluid">
               
                    <ul class="breadcrumb">
                     <li><i class="icon-home"></i>@Html.ActionLink("Home", "Login", "Login")<i class="icon-angle-right"></i>
                        @Html.ActionLink("Student Management", "Index", "Student", "")<i class="icon-angle-right"></i></li>
                        <li class="active">Guardian List</li>
                        <div style="float: right;">
                            @using (Html.BeginForm())
                            {

                                @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
                                <input type="submit" value="Find" />
                            }
                        </div>
                    </ul>
                   <div class="row-fluid sortable">
              <div class="box span12">
                  	<div class="box-header" data-original-title>
						<h2><i class="fa fa-edit"></i><span class="break"></span>Form Elements</h2>
						<div class="box-icon">
						
							<a href="#" class="btn-minimize"><i class="fa fa-chevron-up" aria-hidden="true"></i></a>
						
						</div>
					</div> 
                  <div class="box-content">
                            <!-- table start -->
                            <div id="result" class="table-responsive">
                                <table id="myTable"class="table table-striped table-bordered bootstrap-datatable datatable">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Student Name")
                                            </th>
                                            <th>
                                                @Html.DisplayName("RollNo")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Course")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Department")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Year")
                                            </th>
                                            
                                            <th>
                                                @Html.DisplayName("Father's Email")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Father's Contact")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Mother's Email")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Mother's Contact")
                                            </th>
                                            <th class="edt">
                                                @Html.DisplayName("Action")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.StudentDataCollection)
                                        {
                                            <tr>
                                               
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Studnm)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RollNo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CourseName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Dept_name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.YearName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FatherEmail)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FatherContact)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MotherEmail)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MotherContact)
                                                </td>
                                                <td>
                                                <input type="button" id="@item.Studid" class="btn btn-default btn_edit" value="Edit" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                       
                            <!-- table end -->
                        </div>
                    </div>
               
          </div>
        
    </div>
</div>
</div>
    </div>