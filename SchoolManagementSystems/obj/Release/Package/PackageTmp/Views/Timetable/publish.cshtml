@model Entity.timetableviewmodel
@{
    ViewBag.Title = "Publish Timetable";
    Layout = "~/Views/shared/_SharedLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#result").hide();
        FillPermission();
        $("#Send").click(function () {
            validations();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SendTimetable")',
                data: $('#frm').serialize(),
                success: function (result) {
                    $("#lblmsg").text("Timetable link sent successfully!..");
                    $("#lblmsg").css({ "color": "lime" });
                    $("#lblmsg").css({ "font-size": "25px" });
                    $("#result").html(result);
                    clear();
                }
            });
        });

        function validations() {
            var cnt = 0;

            if ($("#Classid").val() == '') {
                cnt++;
                $("#Classid").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#Classid").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0)
                e.preventDefault();
        }

        $('#Classid').change(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("FillTimetable_classwise")',
                data: $('#frm').serialize() + "",
                success: function (result) {
                    $("#result").html(result);
                    $("#result").show();
                }
            });
        });
    });
</script>
