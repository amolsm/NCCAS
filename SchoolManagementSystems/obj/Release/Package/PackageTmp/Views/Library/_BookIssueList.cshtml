@model Entity.BookAllocation

@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
@*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Student Not Returned Book List</h4>
                </div>


                <div class="modal-body">
                    <div class="form-horizontal">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Book Id</th>
                                    <th>Student Id</th>
                                    <th>Issue Date Time</th>

                                    <th>Panalty</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model._BookIssueList)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BookId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StudentId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Issuedatetime)
                                        </td>

                                        <td>
                                            @if (item.PanaltyStatus == true)
                                            {  <text> Yes</text>}
                                            else
                                            { <text> No</text> }

                                        </td>

                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Book Id</th>
                                    <th>Student Id</th>
                                    <th>Issue Date Time</th>

                                    <th>Panalty</th>
                                </tr>
                            </tfoot>
                        </table>


                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal">OK</button>
                    @*<input class="btn btn-primary" type="submit" value="Save" />*@
                </div>
            </div>
        </div>
    </div>
    

