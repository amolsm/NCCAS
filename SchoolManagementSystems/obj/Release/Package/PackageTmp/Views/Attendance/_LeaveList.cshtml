@model Entity.Attendanceviewmodel
<div id="result" class="table-responsive">
    <table class="table tb-parshav tablesorter">

        <tbody>
            <tr>
                @foreach (var item in Model.AvailableLeaveList)
            {
                    <td>
                        @Html.DisplayFor(modelItem => item.leavename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableLeave)
                    </td>
            }
            </tr>
        </tbody>
    </table>
</div>

<div id="result" class="table-responsive">
    <table class="table tb-parshav tablesorter">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveEndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveTypeid)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                <th>
                    Approve
                </th>
            </tr>   
        </thead>
        <tbody>
            @foreach (var item in Model.EmpLeaveDetail)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveEndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveType)
                    </td>
                    <td width="50%">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approve)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>