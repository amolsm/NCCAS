<script type="text/javascript">
    $(document).ready(function () {
        FillPermission();
        $("#status").prop('checked', true);
        $("#M_b td").css({ "background-color": "orange" });
        $("#lblmsg").text('');
        $('#Busid input').attr("readonly", true);
        if ($("#Busid input").val() == "0" || $("#Busid input").val() == "") {
            $("#Busid").hide();
        }

        function clear() {
            $("#Busid").hide();
            $('#Busid input').val('0');
            $("#busNo").val('');
            $("#busRoute").val('');
            $("#busDriverNm").val('');
            $("#busDrivercontact").val('');
            $("#busRTONo").val('');
            $("#busTime").val('');
            $("#busDateTime").val('');
        }

        $('#busNo').change(function () {
            var busNo = $('#busNo').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_duplicate_busno")',
                dataType: 'JSON',
                data: { busNo: busNo },
                success: function (data) {
                    if (data.busNo != null) {
                        $("#msg").show();
                        $("#lblmsg").text("This Bus Information Already Exists!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $('#busNo').val('');
                        return false;
                    }
                }
            });
        });

        $("#insert").click(function () {
            validations();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("DMLTransport")',
                data: $('#frm').serialize() + "&evt=submit&id=0",
                success: function (result) {
                    $("#msgs").show();
                    $("#lblmsgs").text("Bus Information updated successfully!..");
                    $("#lblmsgs").css({ "color": "lime" });
                    $("#lblmsgs").css({ "font-size": "25px" });
                    $("#result").html(result);
                    clear();
                }
            });
        });

        $("#reset").click(function () {
            clear();
        });

        $("#result").on("click", ".delete", function (evt) {
            var Bloodgroupid = this.id;
            var flag = confirm('Are you sure you want to delete this Bus Information?');
            if (flag) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DMLBloodGroup")',
                    data: $('#frm').serialize() + "&evt=Delete&id=" + Bloodgroupid + "",
                    success: function (result) {
                        $("#msg").show();
                        $("#lblmsg").text("Bus Information deleted successfully!..");
                        $("#lblmsg").css({ "color": "orange" });
                        $("#lblmsg").css({ "font-size": "25px" });
                        $("#result").html(result);
                        clear();
                    }
                });
            }
        });


        $('#busdate').attr("readonly", true);

        $('#busdate').datepicker({
            inline: true,
            showOtherMonths: true,
            showOtherYears: true,
            dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
            dateFormat: 'dd-mm-yy',
            changeMonth: true,
            yearRange: "-100:+0",
            changeYear: true

        });

        $('#busdate').datepicker('setDate', new Date());
        function validations() {
            var cnt = 0;

            if ($("#busNo").val() == '') {
                cnt++;
                $("#busNo").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#busNo").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#busRoute").val() == '') {
                cnt++;
                $("#busRoute").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#busRoute").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#busDriverNm").val() == '') {
                cnt++;
                $("#busDriverNm").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#busDriverNm").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#busDrivercontact").val() == '') {
                cnt++;
                $("#busDrivercontact").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#busDrivercontact").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#busRTONo").val() == '') {
                cnt++;
                $("#busRTONo").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#busRTONo").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#busTime").val() == '') {
                cnt++;
                $("#busTime").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#busTime").css({
                    "border": "",
                    "background": ""
                });
            }
            if ($("#busDateTime").val() == '') {
                cnt++;
                $("#busDateTime").css({
                    "border": "2px solid red"
                });
            }
            else {
                $("#busDateTime").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0)
                e.preventDefault();
        }
    });
</script>
