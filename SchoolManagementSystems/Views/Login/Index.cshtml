@model Entity.tbl_user
<!DOCTYPE html>
<html lang="en">
<head>
    <script src="../../Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-ui.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#UserName').focus();
            $('#Button1').click(function () {
                var username = $('#UserName').val();
                var password = $('#Password').val();

                if (username == "") {
                    $('#dis').slideDown().html("<span>Please type Username!..</span>");
                    return false;
                }
                if (password == "") {
                    $('#dis').slideDown().html('<span id="error">Please type Password!..</span>');
                    return false;
                }
            });
            $('#Button2').click(function () {
                $('#UserName').val("");
                $('#Password').val("");
                $('#Error').text("");
            });

            $('#Button3').click(function () {
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("ForgotPassword")',
                    dataType: 'html',
                    success: function () {

                    }
                });
            });
        });
    </script>
    @*New Design*@
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>
    <link href="../../CSS/bootstrap.css" rel="stylesheet" />
    <link href="../../CSS/style.css" rel="stylesheet" />
    <link href="../../CSS/style_new.css" rel="stylesheet" />
    @*New Design*@
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @Html.Partial("_Banner")
        </div>
        <div class="row" style="margin-bottom:90px;">
            @*<nav class="navbar-parshav ">
                <div class="container">*@
                    @Html.Partial("_Header")
                @*</div>*@<!-- /.container -->
            @*</nav>*@
            <center>
                <div class="col-md-12">
                    <div class="col-md-12" style="margin-bottom: 15px;">
                        
                        <center>
                           
                               
                           
                            <div class="col-md-12">
                                
                                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-inline", @id = "loginForm" }))
                                {
                                    <h3>
                                        Login
                                    </h3>
                                    <label style="color: Orange;" id="dis">
                                    </label>
                                    <span id="Error" style="color: red;">@ViewData["Error"]</span>
                                    @*<form class="form-inline" role="form">*@
                                    <div class="form-group col-md-12">
                                       
                                       
                                        <label class="col-md-offset-3 col-md-2 form_out" for="text">
                                            UserId:
                                        </label>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "required col-md-6 col-md-offset-1 form-control form_in", minLength = "4", placeholder = "User Id" })
                                        @*<input type="text" class="form-control form_in" id="email" placeholder="User Id">*@
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label class="col-md-offset-3 col-md-2  form_out" for="text">
                                            Password:
                                        </label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "required col-md-6  col-md-offset-1 form-control form_in", minLength = "4", placeholder = "Password" })
                                        @*<input type="text" class="form-control form_in" id="email" placeholder="Password">*@
                                    </div>
                                    <div>
                                        <input id="Button1" type="submit" class="btn btn-primary" value="Login" />
                                    </div>
                                }
                            </div>
                        </center>
                    </div>
                </div>
            </center>
        </div>
</div>
        @Html.Partial("_Footer")
    
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        
        
</body>
</html>
