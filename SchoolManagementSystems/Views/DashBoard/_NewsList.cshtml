@model Entity.Dashboardviewmodel
<div id="result" class="table-responsive">
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("ID")
            </th>
            <th>
                @Html.DisplayName("NewsDate")
            </th>
            <th>
                @Html.DisplayName("NewsTitle")
            </th>
            <th>
                @Html.DisplayName("NewsDescription")
            </th>
            <th>
               @Html.DisplayName("Status")
            </th>
          
            <th class="edt">
                @Html.DisplayName("Action")
            </th>
            
        </tr>
        </thead>
                                    <tbody>
        @foreach (var item in Model._Newslist)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Newsid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsDate)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.NewsTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
             <td>
                        <input type="button" id="@item.Newsid" class="btn btn-default btn_edit edit" value="Edit" />  
                 
                                             
                       <input type="button" id="@item.Newsid"  class="btn btn-default delete" value="Delete" />                                                
                                                                    
                    </td>
                  
              
            </tr>
        }
        </tbody>
    </table>
</div>
