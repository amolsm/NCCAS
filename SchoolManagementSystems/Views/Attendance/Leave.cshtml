</style>
<script type="text/javascript">

    $(document).ready(function () {
        FillPermission();
        var Leavedays = 0;
        $("#insert").click(function (e) {
            Validations(e);
            var LeaveType = $("#LeaveTypeid").val();
            var EMPid = $("#Empid").val();

            CalculateDiff();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_Leave")',
                dataType: 'JSON',
                data: { Empid: EMPid, LeaveTypeid: LeaveType, Days: Leavedays },
                success: function (data) {
                    if (data.Leaves != null && data.Leaves < 0) {
                        $("#LeaveTypeid").val('');
                        $("#Empid").val('');
                        alert("Employee has no balance for this leave type");
                        return false;
                    }
                }
            });
            $.ajax({
                type: 'POST',
                url: '@Url.Action("EmployeeLeave")',
                data: $('#frm').serialize() + "&evt=submit",
                success: function (result) {
                    $("#msgs").show();
                    $("#lblmsgs").text("EmployeeLeave  updated successfully!..");
                    $("#lblmsgs").css({ "color": "green" });
                    $("#lblmsgs").css({ "font-size": "15px" });
                    $("#result").html(result);
                    clear();

                    ReloadPaging();
                }
                });
        });

        $('#datepicker1').attr("readonly", true);

        $('#datepicker').attr("readonly", true);

        $('#datepicker').datepicker({
            inline: true,
            showOtherMonths: true,
            showOtherYears: true,
            dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            yearRange: "-100:+0",
            changeYear: true
        });

        $('#datepicker1').datepicker({
            inline: true,
            showOtherMonths: true,
            showOtherYears: true,
            dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            yearRange: "-100:+0",
            changeYear: true
        });

        $('#datepicker').datepicker('setDate', new Date());
        $('#datepicker1').datepicker('setDate', new Date());

        $('#StaffAbsent').change(function () {
            if ($(this).is(":checked")) {
                $('#staffreason').css('display', 'block');
            }
            else {
                $('#staffreason').css('display', 'none');
            }
        });


        $("#Empid").change(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetAvailableLeaves")',
                data:  $('#frm').serialize() ,
                success: function (result) {
                    $("#result").html(result);
                }
            });
        })

        $("#LeaveTypeid").change(function () {
            if ($("#Empid").val() == null || $("#Empid").val() == "")
            {
                $("#LeaveTypeid").val('');
                alert("Please select Employee First");
                return;
            }
            var LeaveType = $("#LeaveTypeid").val();
            var EMPid = $("#Empid").val();
            if (LeaveType == "" || LeaveType == "undefined")
            {
                return false;
            }
            CalculateDiff();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("check_Leave")',
                dataType: 'JSON',
                data: { Empid: EMPid, LeaveTypeid: LeaveType, Days: Leavedays },
                success: function (data) {
                    if (data.Leaves != null && data.Leaves < 0) {
                        $("#LeaveTypeid").val('');
                        alert("Employee has no balance for this leave type");
                        return false;
                    }
                }
            });
        });

        function CalculateDiff() {

            if ($("#LeaveStartDate").val() != "" && $("#LeaveEndDate").val() != "") {

                var From_date = new Date($("#datepicker").val());
                var To_date = new Date($("#datepicker1").val());
                var diff_date = To_date - From_date;

                Leavedays = (Math.floor(((diff_date % 31536000000) % 2628000000) / 86400000))+1;
            }
            else {
                alert("Please select dates");
                return false;
            }
        }

        function Validations(e) {
            var cnt = 0;
            if ($("#Empid").val() == '') {
                cnt++;
                $("#Empid").css({
                    "border": "1px solid red"
                });
            }
            else {
                $("#Empid").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#LeaveTypeid").val() == '') {
                cnt++;
                $("#LeaveTypeid").css({
                    "border": "1px solid red"
                });
            }
            else {
                $("#LeaveTypeid").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#LeaveStartDate").val() == '') {
                cnt++;
                $("#LeaveStartDate").css({
                    "border": "1px solid red"
                });
            }
            else {
                $("#LeaveStartDate").css({
                    "border": "",
                    "background": ""
                });
            }

            if ($("#LeaveEndDate").val() == '') {
                cnt++;
                $("#LeaveEndDate").css({
                    "border": "1px solid red"
                });
            }
            else {
                $("#LeaveEndDate").css({
                    "border": "",
                    "background": ""
                });
            }

            if (cnt != 0) {
                e.preventDefault();
            }
        }


    });
</script>
